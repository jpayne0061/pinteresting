<%= link_to 'Back', pins_path %></br>

<div class="row">
	<div class="col-md-offset-3 col-md-8">
	  <div class="box panel panel-default">	  
		  <%= image_tag @pin.image.url(:medium) %>  
			<div class="pin-panel">  
			  <p><%= @pin.description %></p>
			  <strong><%= @pin.user.email if @pin.user %></strong></br>
			  <% if @pin.user == current_user && user_signed_in? %>
				<%= link_to edit_pin_path(@pin) do%> 
				  <span class="glyphicon glyphicon-wrench"></span> Edit
				<% end %>
			    <%= link_to @pin, method: :delete, data: { confirm: 'Are you sure?' } do %>
			      <span class="glyphicon glyphicon-trash", id="remove-glyphicon"></span>Remove
			    <% end %>	
			  <% end %>	
			</div>  
	  </div>	  
	</div>  
</div>   
  