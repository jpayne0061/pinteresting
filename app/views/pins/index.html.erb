<% unless user_signed_in? %>
  <%= render 'pages/home' %>
<% else %>
	<div id="pins" class="transitions-enabled">
		<% @pins.each do |pin| %>
		  <div class="box panel panel-default">	
			<%= link_to image_tag(pin.image.url(:medium)), pin %> 
			<div class="panel-body" id="pin-label">
			  <div class="actions">
				<%= pin.description %>
			  </div>	
			  <strong><%= pin.user.email if pin.user %></strong>
			  <% if pin.user == current_user && user_signed_in? %>
				<div class="actions">
				<%= link_to edit_pin_path(pin) do%> 
				  <span class="glyphicon glyphicon-wrench"></span>Edit
				<% end %>
				<%= link_to pin, method: :delete, data: { confirm: 'Are you sure?' } do %>
				  <span class="glyphicon glyphicon-trash", id="remove-glyphicon"></span>Remove
				<% end %>  
				</div>
			  <% end %>
			</div>		  
		  </div>	
		<% end %>
	</div>
<% end %>   

  
  
  
  
  
  
  